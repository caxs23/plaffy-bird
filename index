<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Dual Image Flappy Bird</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            margin: 0;
            overflow: hidden;
            background-color: #1a1a1a;
            font-family: 'Pretendard', sans-serif;
            touch-action: manipulation;
        }
        canvas {
            display: block;
            margin: 0 auto;
            background-color: #70c5ce;
            box-shadow: 0 0 30px rgba(0,0,0,0.7);
            max-width: 100%;
            max-height: 100vh;
        }
        .ui-overlay {
            position: fixed;
            top: 20px;
            width: 100%;
            text-align: center;
            pointer-events: none;
        }
        .restart-box {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            background: rgba(0, 0, 0, 0.8);
            padding: 2rem;
            border-radius: 1rem;
            color: white;
            display: none;
        }
    </style>
</head>
<body>

    <canvas id="gameCanvas"></canvas>

    <div class="ui-overlay">
        <div id="scoreDisplay" class="text-white text-5xl font-black drop-shadow-lg">0</div>
    </div>

    <div id="restartBox" class="restart-box">
        <h2 class="text-3xl font-bold mb-4 text-red-500">GAME OVER</h2>
        <p id="finalScore" class="text-xl mb-6">Score: 0</p>
        <button id="restartBtn" class="bg-green-500 hover:bg-green-600 text-white px-8 py-3 rounded-full font-bold text-lg transition-transform active:scale-95 pointer-events-auto">
            다시 시작
        </button>
    </div>

    <script>
        /**
         * 이미지 설정 구역
         * 이곳의 URL을 깃허브 원본 이미지(Raw) 주소로 교체하세요.
         */
        const IMG_UP_URL = 'https://raw.githubusercontent.com/samuelcust/flappy-bird-assets/master/sprites/yellowbird-upflap.png';
        const IMG_DOWN_URL = 'https://raw.githubusercontent.com/samuelcust/flappy-bird-assets/master/sprites/yellowbird-downflap.png';

        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const scoreDisplay = document.getElementById('scoreDisplay');
        const restartBox = document.getElementById('restartBox');
        const finalScore = document.getElementById('finalScore');
        const restartBtn = document.getElementById('restartBtn');

        // Game Constants
        const GRAVITY = 0.22;
        const JUMP = -4.6;
        const PIPE_WIDTH = 52;
        const PIPE_GAP = 165;
        const PIPE_SPACING = 100; // Frames between pipes

        // Game State
        let bird = {
            x: 50,
            y: 150,
            w: 42,
            h: 32,
            velocity: 0,
            imgUp: new Image(),
            imgDown: new Image()
        };

        // Load Images
        bird.imgUp.src = IMG_UP_URL;
        bird.imgDown.src = IMG_DOWN_URL;

        let pipes = [];
        let frame = 0;
        let score = 0;
        let gameOver = false;
        let gameStarted = false;

        function init() {
            // Set internal resolution
            canvas.width = 360;
            canvas.height = 640;
            resetGame();
            gameLoop();
        }

        function resetGame() {
            bird.y = canvas.height / 2;
            bird.velocity = 0;
            pipes = [];
            score = 0;
            frame = 0;
            gameOver = false;
            gameStarted = false;
            scoreDisplay.textContent = '0';
            restartBox.style.display = 'none';
        }

        function triggerJump() {
            if (gameOver) return;
            if (!gameStarted) gameStarted = true;
            bird.velocity = JUMP;
        }

        // Event Listeners
        window.addEventListener('keydown', (e) => { if (e.code === 'Space') triggerJump(); });
        canvas.addEventListener('mousedown', (e) => { e.preventDefault(); triggerJump(); });
        canvas.addEventListener('touchstart', (e) => { e.preventDefault(); triggerJump(); }, { passive: false });
        restartBtn.addEventListener('click', resetGame);

        function drawBird() {
            ctx.save();
            ctx.translate(bird.x + bird.w/2, bird.y + bird.h/2);
            
            // Rotate based on velocity
            let rotation = Math.min(Math.PI / 4, Math.max(-Math.PI / 6, bird.velocity * 0.1));
            ctx.rotate(rotation);

            // Select image based on movement (velocity)
            // velocity가 음수면 위로 상승 중, 양수면 아래로 하강 중
            let currentImg = bird.velocity < 0 ? bird.imgUp : bird.imgDown;

            if (currentImg.complete && currentImg.naturalWidth !== 0) {
                ctx.drawImage(currentImg, -bird.w/2, -bird.h/2, bird.w, bird.h);
            } else {
                // Fallback while loading
                ctx.fillStyle = '#f8d348';
                ctx.beginPath();
                ctx.ellipse(0, 0, bird.w/2, bird.h/2, 0, 0, Math.PI * 2);
                ctx.fill();
            }
            ctx.restore();
        }

        function drawPipes() {
            pipes.forEach(pipe => {
                // Gradient for pipes
                let grad = ctx.createLinearGradient(pipe.x, 0, pipe.x + PIPE_WIDTH, 0);
                grad.addColorStop(0, '#73bf2e');
                grad.addColorStop(0.5, '#9ce659');
                grad.addColorStop(1, '#558022');
                
                ctx.fillStyle = grad;
                ctx.strokeStyle = '#2d5a00';
                ctx.lineWidth = 2;

                // Top pipe
                ctx.fillRect(pipe.x, 0, PIPE_WIDTH, pipe.top);
                ctx.strokeRect(pipe.x, -2, PIPE_WIDTH, pipe.top + 2);
                
                // Pipe cap (top)
                ctx.fillRect(pipe.x - 4, pipe.top - 20, PIPE_WIDTH + 8, 20);
                ctx.strokeRect(pipe.x - 4, pipe.top - 20, PIPE_WIDTH + 8, 20);

                // Bottom pipe
                const bottomY = pipe.top + PIPE_GAP;
                const bottomH = canvas.height - bottomY;
                ctx.fillRect(pipe.x, bottomY, PIPE_WIDTH, bottomH);
                ctx.strokeRect(pipe.x, bottomY, PIPE_WIDTH, bottomH + 2);

                // Pipe cap (bottom)
                ctx.fillRect(pipe.x - 4, bottomY, PIPE_WIDTH + 8, 20);
                ctx.strokeRect(pipe.x - 4, bottomY, PIPE_WIDTH + 8, 20);
            });
        }

        function update() {
            if (gameOver || !gameStarted) return;

            bird.velocity += GRAVITY;
            bird.y += bird.velocity;

            // Boundary collision
            if (bird.y + bird.h > canvas.height) {
                bird.y = canvas.height - bird.h;
                endGame();
            }
            if (bird.y < 0) {
                bird.y = 0;
                bird.velocity = 0;
            }

            // Pipe spawning
            if (frame % PIPE_SPACING === 0) {
                let minH = 80;
                let maxH = canvas.height - PIPE_GAP - 80;
                let height = Math.floor(Math.random() * (maxH - minH + 1)) + minH;
                pipes.push({ x: canvas.width, top: height, passed: false });
            }

            pipes.forEach((pipe) => {
                pipe.x -= 2.5;

                // Hitbox detection
                const p = 6; // hitbox padding
                if (
                    bird.x + p < pipe.x + PIPE_WIDTH &&
                    bird.x + bird.w - p > pipe.x &&
                    (bird.y + p < pipe.top || bird.y + bird.h - p > pipe.top + PIPE_GAP)
                ) {
                    endGame();
                }

                // Scoring
                if (!pipe.passed && bird.x > pipe.x + PIPE_WIDTH) {
                    score++;
                    pipe.passed = true;
                    scoreDisplay.textContent = score;
                }
            });

            // Clean up off-screen pipes
            if (pipes.length > 0 && pipes[0].x < -PIPE_WIDTH - 10) {
                pipes.shift();
            }

            frame++;
        }

        function endGame() {
            if (gameOver) return;
            gameOver = true;
            finalScore.textContent = '최종 점수: ' + score;
            restartBox.style.display = 'block';
        }

        function draw() {
            // Draw Sky background
            ctx.fillStyle = '#70c5ce';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            // Draw some clouds (Static for now)
            ctx.fillStyle = 'rgba(255,255,255,0.3)';
            ctx.beginPath(); ctx.arc(50, 80, 20, 0, Math.PI*2); ctx.fill();
            ctx.beginPath(); ctx.arc(80, 80, 30, 0, Math.PI*2); ctx.fill();
            ctx.beginPath(); ctx.arc(110, 80, 20, 0, Math.PI*2); ctx.fill();

            drawPipes();
            drawBird();

            if (!gameStarted && !gameOver) {
                ctx.fillStyle = 'rgba(0,0,0,0.3)';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
                ctx.fillStyle = 'white';
                ctx.textAlign = 'center';
                ctx.font = 'bold 20px sans-serif';
                ctx.fillText('화면을 클릭하여 시작!', canvas.width / 2, canvas.height / 2 + 50);
            }
        }

        function gameLoop() {
            update();
            draw();
            requestAnimationFrame(gameLoop);
        }

        init();
    </script>
</body>
</html>
